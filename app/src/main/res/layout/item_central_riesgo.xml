<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:id="@+id/item_ofert_click"
    android:background="@drawable/back_item_search"
    android:layout_height="400dp"

    android:layout_marginBottom="20dp">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/person_central_riesgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="TITULAR"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado consulta mas reciente"
            android:textColor="@color/black_overlay"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultadoConsultaRecienteCentralRiesgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ZVM+"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha consulta más reciente"
            android:textColor="@color/black_overlay"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/fechaConsultaRecienteCentralRiesgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="2022-22-01"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Tenemos VB vigente del cliente para ser consultado?"
            android:textColor="@color/black_overlay"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/vbConsultaCentralRiesgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="SÍ"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />
    </LinearLayout>





    <View
        android:id="@+id/viewleft"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/back_menu_client_deco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <Button

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_menu_client_deco"
            android:fontFamily="@font/hvdtrial_brevia_medium"
            android:text="última consulta detallada"
            android:textColor="@color/backwhite"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="20dp" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_buttons_blue"
            android:fontFamily="@font/hvdtrial_brevia_medium"
            android:text="Historico de endeudamiento"
            android:textColor="@color/light_blue_600"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="20dp" />
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


