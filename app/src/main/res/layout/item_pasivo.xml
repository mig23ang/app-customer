<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:id="@+id/item_ofert_click"
    android:background="@drawable/back_item_search"
    android:layout_height="600dp"

    android:layout_marginBottom="20dp">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Número producto: "/>
            <TextView
                android:textAlignment="textStart"
                android:id="@+id/numeroProducto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="888,888"/>

        </LinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Capital"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/capitalPasivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="$ 100.000.000"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/estadoPasivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ACTIVO"
            android:textColor="@color/splasscreencolor"
            android:textStyle="bold" />





        <TextView
            android:id="@+id/tipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Producto: CDT"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleTipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="CDT menor a 80 días"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />










        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha apertura"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fechaAperturaPasivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022-05-01"
            android:layout_marginBottom="10dp" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha cierre"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fechaCierre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022-05-01"
            android:layout_marginBottom="10dp" />



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intereses"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/interesesPasivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 300.000"
            android:layout_marginBottom="10dp" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otros"
            android:textColor="@color/letersblack"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/otrosPasivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 100.000"
            android:layout_marginBottom="10dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Saldo total "
            android:textColor="@color/letersblack"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/saldoTotalPasivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="$ 1.400.000 "
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>





    <View
        android:id="@+id/viewleft"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/back_menu_client_deco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


