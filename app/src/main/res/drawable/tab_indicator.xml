<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rectángulo verde -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgreen" />
        </shape>
    </item>

    <!-- Rectángulo blanco -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/backwhite" />
        </shape>
    </item>
</layer-list>